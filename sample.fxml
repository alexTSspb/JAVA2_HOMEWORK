<VBox fx:id="vbox" fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="CENTER">
    <stylesheets><URL value="@css.css"></URL> </stylesheets>
    <MenuBar layoutX="100" layoutY="200">
        <menus>
            <Menu fx:id="filemenu" mnemonicParsing="false" text="File">
                <MenuItem fx:id="pasteItem" mnemonicParsing="false" onAction="#change" text="Change style">

                </MenuItem>
                <MenuItem fx:id="exitItem" mnemonicParsing="false" onAction="#Exit" text="Close">

                </MenuItem>

            </Menu>
        </menus>

    </MenuBar>
    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS"></TextArea>
    <HBox>
        <TextField fx:id="textField" promptText="Введите сообщение" onAction="#sendMsg" HBox.hgrow="ALWAYS"></TextField>

        <Button fx:id="button" onAction="#sendMsg" text="Send"></Button>
    </HBox>


</VBox>